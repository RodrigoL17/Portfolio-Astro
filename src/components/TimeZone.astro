<p class="text-3xl">
  <span id="clock"></span>
</p>
<script>
  const clock = document.getElementById("clock");
  
  const getHours = (now: Date, timeZoneOffset: number): number => {
    return now.getUTCHours() < timeZoneOffset
      ? now.getUTCHours() + 24 - timeZoneOffset
      : now.getUTCHours() - timeZoneOffset;
  };

  const convertToString = (value: number): string => {
    return `${value}`.padStart(2, "0");
  };

  function updateClock(clock?: HTMLElement) {
    const now = new Date();
    const timeZoneOffset = 3;

    const hours = convertToString(getHours(now, timeZoneOffset));
    const minutes = convertToString(now.getMinutes());
    const seconds = convertToString(now.getSeconds());

   clock.textContent = `${hours}:${minutes}:${seconds}`;
  }
  if (clock) {
    updateClock(clock);
    setInterval(() => updateClock(clock), 1000);
  }
</script>
