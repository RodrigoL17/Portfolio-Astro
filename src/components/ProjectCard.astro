---
import type { Projects } from "../types";
import type { IconsPaths } from "./IconsPath";
import Icon from "./Icon.astro";
import LinkBtn from "./LinkBtn.astro";
import { btnStyles, commonStyles } from "../pages/index.astro";

interface Props extends Projects {}
const { title, imgUrl, tecnologies, description, gitHubLink, urlLink } =
  Astro.props;
---

<article class={`${commonStyles} text-white flex gap-4 items-center`}>
  <div class="rounded-lg bg-white/50 w-60 h-[135px] aspect-video">
    <img
      class="object-cover w-full h-full rounded-lg"
      src={imgUrl}
      alt={title}
    />
  </div>
  <div class="flex flex-col gap-4">
    <h3 class="text-xl">{title}</h3>
    <ul class="flex gap-3">
      {
        tecnologies.map((tec: keyof typeof IconsPaths) => (
          <Icon icon={tec} width="24" />
        ))
      }
    </ul>
    <p class="text-sm">{description}</p>
    <div class="flex gap-4">
      <LinkBtn href={gitHubLink} styles={btnStyles}>
        <Icon slot="icon" icon="GitHub" width="20" />
      </LinkBtn>
      {
        urlLink && (
          <LinkBtn href={urlLink} styles={btnStyles}>
            <Icon slot="icon" icon="Globe" width="24" />
          </LinkBtn>
        )
      }
    </div>
  </div>
</article>
